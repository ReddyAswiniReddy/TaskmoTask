<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HeadingStyle">
        <item name="android:textSize">@dimen/dp_22</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/lato_bold</item>
    </style>

    <style name="TextStyle18Regular">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="CardLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/dp_20</item>
        <item name="android:paddingEnd">@dimen/dp_15</item>
        <item name="android:paddingTop">@dimen/dp_14</item>
        <item name="android:paddingBottom">@dimen/dp_15</item>
        <item name="background">@color/white</item>
    </style>

    <style name="FavoriteUnFavoriteTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_favorite_unfavorite</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:paddingStart">@dimen/dp_12</item>
        <item name="android:paddingTop">@dimen/dp_10</item>
        <item name="android:paddingEnd">@dimen/dp_12</item>
        <item name="android:paddingBottom">@dimen/dp_10</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>
</resources>
